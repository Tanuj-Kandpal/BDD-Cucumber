{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [{
    "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
    "automerge": true,
    "matchPackagePatterns": [
      "*"
    ]
  }],
  "groupName": "all dependencies",
  "groupSlug": "all",
  "lockFileMaintenance": {
    "enabled": false
  },
  "separateMajorMinor": false
}